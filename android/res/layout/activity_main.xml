<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAMU CSCE 462 Group 3" />

    <Button
        android:id="@+id/takePictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp"
        android:text="Press to Take Photo" />

    <Button
        android:id="@+id/drawTriangleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/takePictureButton"
        android:layout_toRightOf="@+id/drawSquareButton"
        android:text="Triangle" />

    <Button
        android:id="@+id/drawInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/takePictureButton"
        android:layout_alignRight="@+id/drawCircleButton"
        android:layout_below="@+id/drawCircleButton"
        android:text="Info" />

    <Button
        android:id="@+id/drawCircleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/takePictureButton"
        android:text="Circle" />

    <Button
        android:id="@+id/drawPuppyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/drawTAMUButton"
        android:layout_alignBottom="@+id/drawTAMUButton"
        android:layout_alignLeft="@+id/drawTriangleButton"
        android:layout_alignRight="@+id/drawTriangleButton"
        android:text="Puppy" />

    <Button
        android:id="@+id/drawTAMUButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/drawInfoButton"
        android:layout_alignBottom="@+id/drawInfoButton"
        android:layout_toRightOf="@+id/drawInfoButton"
        android:text="TAMU" />

    <Button
        android:id="@+id/drawSquareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/drawTriangleButton"
        android:layout_alignBottom="@+id/drawTriangleButton"
        android:layout_alignLeft="@+id/drawTAMUButton"
        android:text="Square" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/drawInfoButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/drawPuppyButton"
        android:layout_marginBottom="22dp"
        android:text="Clear Screen" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clearButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Connect to Device" />

    <Button
        android:id="@+id/frameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Frame" />

</RelativeLayout>
